{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "rootDir": ".",
    "declaration": true,
    // "strict": true,
    "baseUrl": ".",
    "paths": {
      "blessed-contrib": ["src/declarations/blessed-contrib"],      
      "blessed": ["src/declarations/blessed"], 
    },
    "jsx": "react",
  },
  "include": [
    "src", "spec"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
