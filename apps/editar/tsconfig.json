{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "esnext", "dom"
    ],
    "moduleResolution": "node",
    "rootDir": ".",
    "declaration": true,
    "baseUrl": ".",
       "paths": {
      "blessed-contrib": ["../../dist/src/declarations/blessed-contrib"],      
      "blessed": ["../../dist/src/declarations/blessed"]
    },
    "jsx": "react",
  },
  "include": [
    "src", "spec"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
